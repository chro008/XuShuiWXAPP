<!--pages/login/login.wxml-->
<view class='logo-container'>
  <image class='login-logo' src="/images/login_logo.png"></image>
</view>

<form bindsubmit="loginSubmit">
  <view class='input-container'>
    <view class="input-area input-area-bottom">
      <text>会员名</text>
      <input placeholder="请输入会员名" type='text' name="membername" />
    </view>
    <view class="input-area input-area-bottom">
      <text>用户名</text>
      <input placeholder="请输入用户名" type='text' name="username" />
    </view>
    <view class="input-area">
      <text space="emsp" decode='true'>密&emsp;码</text>
      <input placeholder="请输入密码" type='text' password='true' name="password" />
    </view>
  </view>

  <view class="btn-area">
    <button formType="submit">登录</button>
  </view>

</form>