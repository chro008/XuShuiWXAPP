/* pages/login/login.wxss */

.logo-container {
  width: 100%;
  text-align: center;
  vertical-align: middle;
  padding: 102rpx 0 67rpx 0;
}

.login-logo {
  width: 188rpx;
  height: 192rpx;
}

.input-container {
  background: white;
  border-top: 0.2rpx solid #d6d6d6;
  border-bottom: 0.2rpx solid #d6d6d6;
  line-height: 88rpx;
}

.input-area {
  width: 100%;
  height: 88rpx;
  padding-left: 30rpx;
}

.input-area-bottom {
  border-bottom: 0.2rpx solid #d6d6d6;
}

.input-area text {
  height: 88rpx;
  color: #333;
  float: left;
}

.input-area input {
  float: left;
  height: 88rpx;
  margin-left: 40rpx;
}

.btn-area {
  margin-top: 60rpx;
  text-align: center;
}

.btn-area button {
  height: 100rpx;
  width: 686rpx;
  margin: 0 auto;
  font-size: 34rpx;
  background-color: #f3901d;
  color: #fff;
  line-height: 100rpx;
}
